{
    "server": {
        "host": "0.0.0.0",
        "port": 8080,
        "cors": {
            "allow_origin": "*",
            "allow_methods": "POST, GET, OPTIONS",
            "allow_headers": "Content-Type"
        }
    },
    "recognition": {
        "model_path": "models/whisper-medium.bin",
        "default_params": {
            "language": "auto",
            "use_gpu": true,
            "beam_size": 5,
            "temperature": 0.0
        },
        "text_correction": {
            "enable": false,
            "server_url": "http://localhost:8000",
            "model": "deepseek-coder-7b-instruct-v1.5",
            "temperature": 0.3,
            "max_tokens": 512
        }
    },
    "storage": {
        "dir": "storage",
        "min_file_size_bytes": 1048576
    },
    "logging": {
        "level": "info",
        "file": "logs/server.log"
    }
} 